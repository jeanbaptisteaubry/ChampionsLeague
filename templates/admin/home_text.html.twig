{% extends 'base.html.twig' %}
{% block body %}
  <h1>Texte d'accueil</h1>
  {% if ok %}<p class="flash-ok">{{ ok }}</p>{% endif %}
  {% if error %}<p class="flash-err">{{ error }}</p>{% endif %}
  <form method="post" action="/admin/home-text">
    <input type="hidden" name="_csrf" value="{{ app.csrf }}">
    <label for="home_text">Contenu</label>
    <textarea id="home_text" name="home_text" rows="10" style="width:100%">{{ homeText }}</textarea>
    <div style="margin-top:.5rem">
      <button type="submit">Enregistrer</button>
    </div>
  </form>
{% endblock %}

