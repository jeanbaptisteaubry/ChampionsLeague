{% extends 'base.html.twig' %}
{% block body %}
  <h1>Définir votre mot de passe</h1>
  {% if ok %}<p class="flash-ok">{{ ok }}</p>{% endif %}
  {% if error %}<p class="flash-err">{{ error }}</p>{% endif %}
  {% if not valid %}
    <p>Ce lien d'activation est invalide ou a expiré.</p>
  {% else %}
    <form method="post" action="">
      <input type="hidden" name="_csrf" value="{{ app.csrf }}">
      <label for="password">Nouveau mot de passe</label>
      <input type="password" id="password" name="password" required>
      <label for="password_confirm">Confirmer le mot de passe</label>
      <input type="password" id="password_confirm" name="password_confirm" required>
      <p style="color:#555;font-size:.9em">Le mot de passe doit contenir au moins 8 caractères dont au moins une lettre et un chiffre.</p>
      <button type="submit">Enregistrer</button>
    </form>
  {% endif %}
{% endblock %}
